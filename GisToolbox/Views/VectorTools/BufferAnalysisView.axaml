<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:GisToolbox.ViewModels.VectorTools"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="GisToolbox.Views.VectorTools.BufferAnalysisView"
             x:DataType="vm:BufferAnalysisViewModel">

    <StackPanel Spacing="24">
        <!-- 工具标题 -->
        <StackPanel Spacing="8">
            <TextBlock Text="{Binding ToolName}"
                       Classes="title" />
            <TextBlock Text="{Binding ToolDescription}"
                       Classes="body"
                       TextWrapping="Wrap" />
        </StackPanel>

        <!-- 参数配置卡片 -->
        <Border Classes="card">
            <StackPanel Spacing="20">
                <TextBlock Text="参数配置"
                           Classes="subtitle" />

                <!-- 输入文件 -->
                <StackPanel Spacing="8">
                    <TextBlock Text="输入文件"
                               Classes="body"
                               FontWeight="SemiBold" />
                    <Grid ColumnDefinitions="*,Auto">
                        <TextBox Grid.Column="0"
                                 Text="{Binding InputFilePath}"
                                 Watermark="选择输入矢量文件..."
                                 IsReadOnly="True" />
                        <Button Grid.Column="1"
                                Content="浏览"
                                Classes="secondary"
                                Command="{Binding SelectInputFileCommand}"
                                Margin="8,0,0,0"
                                Padding="16,8" />
                    </Grid>
                </StackPanel>

                <!-- 输出文件 -->
                <StackPanel Spacing="8">
                    <TextBlock Text="输出文件"
                               Classes="body"
                               FontWeight="SemiBold" />
                    <Grid ColumnDefinitions="*,Auto">
                        <TextBox Grid.Column="0"
                                 Text="{Binding OutputFilePath}"
                                 Watermark="选择输出文件路径..."
                                 IsReadOnly="True" />
                        <Button Grid.Column="1"
                                Content="浏览"
                                Classes="secondary"
                                Command="{Binding SelectOutputFileCommand}"
                                Margin="8,0,0,0"
                                Padding="16,8" />
                    </Grid>
                </StackPanel>

                <!-- 缓冲距离 -->
                <StackPanel Spacing="8">
                    <Grid ColumnDefinitions="*,Auto,Auto">
                        <TextBlock Grid.Column="0"
                                   Text="缓冲距离"
                                   Classes="body"
                                   FontWeight="SemiBold" />
                        <TextBlock Grid.Column="1"
                                   Text="{Binding BufferDistance, StringFormat='{}{0:F2}'}"
                                   Classes="body"
                                   FontWeight="Bold"
                                   Foreground="#0078D4"
                                   Margin="0,0,8,0" />
                        <ComboBox Grid.Column="2"
                                  ItemsSource="{Binding DistanceUnits}"
                                  SelectedItem="{Binding DistanceUnit}"
                                  MinWidth="80" />
                    </Grid>

                    <Grid ColumnDefinitions="*,120">
                        <Slider Grid.Column="0"
                                Minimum="0.1"
                                Maximum="1000"
                                Value="{Binding BufferDistance}"
                                TickFrequency="10" />
                        <NumericUpDown Grid.Column="1"
                                       Minimum="0.1"
                                       Maximum="10000"
                                       Value="{Binding BufferDistance}"
                                       FormatString="F2"
                                       Margin="8,0,0,0" />
                    </Grid>

                    <TextBlock Classes="caption">
                        设置缓冲区距离。可使用滑块快速调整或输入精确数值
                    </TextBlock>
                </StackPanel>

                <!-- 格式选择 -->
                <Grid ColumnDefinitions="*,*" ColumnSpacing="16">
                    <StackPanel Grid.Column="0" Spacing="8">
                        <TextBlock Text="输入格式"
                                   Classes="body"
                                   FontWeight="SemiBold" />
                        <ComboBox SelectedItem="{Binding InputFormat}"
                                  HorizontalAlignment="Stretch">
                            <ComboBoxItem Content="Shapefile" />
                            <ComboBoxItem Content="GeoJSON" />
                            <ComboBoxItem Content="WKT" />
                        </ComboBox>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Spacing="8">
                        <TextBlock Text="输出格式"
                                   Classes="body"
                                   FontWeight="SemiBold" />
                        <ComboBox SelectedItem="{Binding OutputFormat}"
                                  HorizontalAlignment="Stretch">
                            <ComboBoxItem Content="Shapefile" />
                            <ComboBoxItem Content="GeoJSON" />
                            <ComboBoxItem Content="WKT" />
                        </ComboBox>
                    </StackPanel>
                </Grid>

                <!-- 说明 -->
                <Border Background="#F3F2F1"
                        Padding="16"
                        CornerRadius="4">
                    <StackPanel Spacing="8">
                        <TextBlock Text="缓冲区分析"
                                   Classes="body"
                                   FontWeight="SemiBold" />
                        <TextBlock Classes="caption" TextWrapping="Wrap">
                            缓冲区分析在输入几何周围创建指定距离的区域。常用于影响范围分析、安全距离评估等场景。
                        </TextBlock>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>

        <!-- 操作按钮 -->
        <StackPanel Orientation="Horizontal" Spacing="12">
            <Button Content="创建缓冲区"
                    Command="{Binding ProcessCommand}"
                    Classes="primary"
                    IsEnabled="{Binding !IsBusy}" />

            <Button Content="重置"
                    Command="{Binding ResetCommand}"
                    Classes="secondary" />
        </StackPanel>

        <!-- 进度显示 -->
        <Border Classes="card"
                IsVisible="{Binding IsBusy}">
            <StackPanel Spacing="16">
                <TextBlock Text="正在创建缓冲区..."
                           Classes="subtitle" />
                <ProgressBar Value="{Binding ProgressValue}"
                             Maximum="100" />
                <TextBlock Text="{Binding StatusMessage}"
                           Classes="body" />
            </StackPanel>
        </Border>

        <!-- 结果显示 -->
        <Border Classes="card"
                IsVisible="{Binding !IsBusy}">
            <StackPanel Spacing="16">
                <TextBlock Text="处理结果"
                           Classes="subtitle" />

                <StackPanel Spacing="8">
                    <TextBlock Classes="caption">状态</TextBlock>
                    <TextBlock Text="{Binding StatusMessage}"
                               Classes="body"
                               FontWeight="SemiBold" />
                </StackPanel>

                <!-- 错误显示 -->
                <Border Background="#FFF4F4"
                        BorderBrush="#E81123"
                        BorderThickness="1"
                        Padding="16"
                        CornerRadius="4"
                        IsVisible="{Binding HasError}">
                    <StackPanel Spacing="8">
                        <TextBlock Text="错误"
                                   FontWeight="SemiBold"
                                   Foreground="#E81123" />
                        <TextBlock Text="{Binding ErrorMessage}"
                                   Classes="body"
                                   TextWrapping="Wrap" />
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>