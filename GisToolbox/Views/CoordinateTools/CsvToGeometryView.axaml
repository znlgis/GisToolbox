<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:GisToolbox.ViewModels.CoordinateTools"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="GisToolbox.Views.CoordinateTools.CsvToGeometryView"
             x:DataType="vm:CsvToGeometryViewModel">

    <StackPanel Spacing="24">
        <!-- 工具标题 -->
        <StackPanel Spacing="8">
            <TextBlock Text="{Binding ToolName}"
                       Classes="title" />
            <TextBlock Text="{Binding ToolDescription}"
                       Classes="body"
                       TextWrapping="Wrap" />
        </StackPanel>

        <!-- 参数配置卡片 -->
        <Border Classes="card">
            <StackPanel Spacing="20">
                <TextBlock Text="参数配置"
                           Classes="subtitle" />

                <!-- 输入文件 -->
                <StackPanel Spacing="8">
                    <TextBlock Text="输入 CSV 文件"
                               Classes="body"
                               FontWeight="SemiBold" />
                    <Grid ColumnDefinitions="*,Auto">
                        <TextBox Grid.Column="0"
                                 Text="{Binding InputFilePath}"
                                 Watermark="选择 CSV 文件..."
                                 IsReadOnly="True" />
                        <Button Grid.Column="1"
                                Content="浏览"
                                Classes="secondary"
                                Command="{Binding SelectInputFileCommand}"
                                Margin="8,0,0,0"
                                Padding="16,8" />
                    </Grid>
                </StackPanel>

                <!-- 输出文件 -->
                <StackPanel Spacing="8">
                    <TextBlock Text="输出文件"
                               Classes="body"
                               FontWeight="SemiBold" />
                    <Grid ColumnDefinitions="*,Auto,140">
                        <TextBox Grid.Column="0"
                                 Text="{Binding OutputFilePath}"
                                 Watermark="选择输出文件路径..."
                                 IsReadOnly="True" />
                        <Button Grid.Column="1"
                                Content="浏览"
                                Classes="secondary"
                                Command="{Binding SelectOutputFileCommand}"
                                Margin="8,0"
                                Padding="16,8" />
                        <ComboBox Grid.Column="2"
                                  SelectedItem="{Binding OutputFormat}"
                                  Margin="8,0,0,0">
                            <ComboBoxItem Content="GeoJSON" />
                            <ComboBoxItem Content="Shapefile" />
                            <ComboBoxItem Content="WKT" />
                        </ComboBox>
                    </Grid>
                </StackPanel>

                <!-- CSV 配置 -->
                <Grid ColumnDefinitions="*,*,*" ColumnSpacing="16">
                    <StackPanel Grid.Column="0" Spacing="8">
                        <TextBlock Text="分隔符"
                                   Classes="body"
                                   FontWeight="SemiBold" />
                        <ComboBox ItemsSource="{Binding DelimiterOptions}"
                                  SelectedItem="{Binding Delimiter}"
                                  HorizontalAlignment="Stretch" />
                    </StackPanel>

                    <StackPanel Grid.Column="1" Spacing="8">
                        <TextBlock Text="包含表头"
                                   Classes="body"
                                   FontWeight="SemiBold" />
                        <CheckBox IsChecked="{Binding HasHeader}"
                                  Content="首行为表头"
                                  VerticalAlignment="Center"
                                  Margin="0,8,0,0" />
                    </StackPanel>

                    <StackPanel Grid.Column="2" Spacing="8">
                        <TextBlock Text="SRID"
                                   Classes="body"
                                   FontWeight="SemiBold" />
                        <NumericUpDown Value="{Binding Srid}"
                                       Minimum="0"
                                       Maximum="999999"
                                       FormatString="0" />
                    </StackPanel>
                </Grid>

                <!-- 坐标列配置 -->
                <Grid ColumnDefinitions="*,*" ColumnSpacing="16">
                    <StackPanel Grid.Column="0" Spacing="8">
                        <TextBlock Text="X 坐标列名（经度）"
                                   Classes="body"
                                   FontWeight="SemiBold" />
                        <TextBox Text="{Binding XColumnName}"
                                 Watermark="如: longitude, x, lon" />
                    </StackPanel>

                    <StackPanel Grid.Column="1" Spacing="8">
                        <TextBlock Text="Y 坐标列名（纬度）"
                                   Classes="body"
                                   FontWeight="SemiBold" />
                        <TextBox Text="{Binding YColumnName}"
                                 Watermark="如: latitude, y, lat" />
                    </StackPanel>
                </Grid>

                <!-- 说明 -->
                <Border Background="#F3F2F1"
                        Padding="16"
                        CornerRadius="4">
                    <StackPanel Spacing="8">
                        <TextBlock Text="CSV 格式要求"
                                   Classes="body"
                                   FontWeight="SemiBold" />
                        <TextBlock Classes="caption" TextWrapping="Wrap">
                            • CSV 文件必须包含 X（经度）和 Y（纬度）坐标列
                            <LineBreak />
                            • 如果包含表头，请指定坐标列的列名
                            <LineBreak />
                            • 坐标值必须是有效的数字
                            <LineBreak />
                            • 默认 SRID 4326 为 WGS84 地理坐标系
                        </TextBlock>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>

        <!-- 操作按钮 -->
        <StackPanel Orientation="Horizontal" Spacing="12">
            <Button Content="开始转换"
                    Command="{Binding ProcessCommand}"
                    Classes="primary"
                    IsEnabled="{Binding !IsBusy}" />

            <Button Content="重置"
                    Command="{Binding ResetCommand}"
                    Classes="secondary" />
        </StackPanel>

        <!-- 进度显示 -->
        <Border Classes="card"
                IsVisible="{Binding IsBusy}">
            <StackPanel Spacing="16">
                <TextBlock Text="正在转换 CSV 数据..."
                           Classes="subtitle" />
                <ProgressBar Value="{Binding ProgressValue}"
                             Maximum="100" />
                <TextBlock Text="{Binding StatusMessage}"
                           Classes="body" />
            </StackPanel>
        </Border>

        <!-- 结果显示 -->
        <Border Classes="card"
                IsVisible="{Binding !IsBusy}">
            <StackPanel Spacing="16">
                <TextBlock Text="转换结果"
                           Classes="subtitle" />

                <StackPanel Spacing="8">
                    <TextBlock Classes="caption">状态</TextBlock>
                    <TextBlock Text="{Binding StatusMessage}"
                               Classes="body"
                               FontWeight="SemiBold" />
                </StackPanel>

                <StackPanel
                    IsVisible="{Binding ConvertedFeatureCount, Converter={x:Static ObjectConverters.IsNotNull}}"
                    Spacing="8">
                    <TextBlock Text="转换的要素数"
                               Classes="caption" />
                    <TextBlock Text="{Binding ConvertedFeatureCount}"
                               FontSize="32"
                               FontWeight="Bold"
                               Foreground="#0078D4" />
                </StackPanel>

                <!-- 错误显示 -->
                <Border Background="#FFF4F4"
                        BorderBrush="#E81123"
                        BorderThickness="1"
                        Padding="16"
                        CornerRadius="4"
                        IsVisible="{Binding HasError}">
                    <StackPanel Spacing="8">
                        <TextBlock Text="错误"
                                   FontWeight="SemiBold"
                                   Foreground="#E81123" />
                        <TextBlock Text="{Binding ErrorMessage}"
                                   Classes="body"
                                   TextWrapping="Wrap" />
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>