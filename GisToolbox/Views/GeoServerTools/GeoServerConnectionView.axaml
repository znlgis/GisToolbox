<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:GisToolbox.ViewModels.GeoServerTools"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="GisToolbox.Views.GeoServerTools.GeoServerConnectionView"
             x:DataType="vm:GeoServerConnectionViewModel">

    <StackPanel Spacing="24">
        <!-- 工具标题 -->
        <StackPanel Spacing="8">
            <TextBlock Text="{Binding ToolName}"
                       Classes="title" />
            <TextBlock Text="{Binding ToolDescription}"
                       Classes="body"
                       TextWrapping="Wrap" />
        </StackPanel>

        <!-- 连接配置卡片 -->
        <Border Classes="card">
            <StackPanel Spacing="20">
                <TextBlock Text="连接配置"
                           Classes="subtitle" />

                <!-- 连接名称 -->
                <StackPanel Spacing="8">
                    <TextBlock Text="连接名称"
                               Classes="body"
                               FontWeight="SemiBold" />
                    <TextBox Text="{Binding ConnectionName}"
                             Watermark="输入连接名称..."
                             IsEnabled="{Binding !IsConnected}" />
                </StackPanel>

                <!-- 服务器 URL -->
                <StackPanel Spacing="8">
                    <TextBlock Text="GeoServer URL"
                               Classes="body"
                               FontWeight="SemiBold" />
                    <TextBox Text="{Binding ServerUrl}"
                             Watermark="例如: http://localhost:8080/geoserver"
                             IsEnabled="{Binding !IsConnected}" />
                </StackPanel>

                <!-- 用户名 -->
                <StackPanel Spacing="8">
                    <TextBlock Text="用户名"
                               Classes="body"
                               FontWeight="SemiBold" />
                    <TextBox Text="{Binding Username}"
                             Watermark="输入用户名..."
                             IsEnabled="{Binding !IsConnected}" />
                </StackPanel>

                <!-- 密码 -->
                <StackPanel Spacing="8">
                    <TextBlock Text="密码"
                               Classes="body"
                               FontWeight="SemiBold" />
                    <TextBox Text="{Binding Password}"
                             PasswordChar="●"
                             Watermark="输入密码..."
                             IsEnabled="{Binding !IsConnected}" />
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- 操作按钮 -->
        <StackPanel Orientation="Horizontal" Spacing="12">
            <Button Content="测试连接"
                    Command="{Binding TestConnectionCommand}"
                    Classes="secondary"
                    IsEnabled="{Binding !IsBusy}" />

            <Button Content="连接"
                    Command="{Binding ConnectCommand}"
                    Classes="primary"
                    IsVisible="{Binding !IsConnected}"
                    IsEnabled="{Binding !IsBusy}" />

            <Button Content="断开连接"
                    Command="{Binding DisconnectCommand}"
                    Classes="secondary"
                    IsVisible="{Binding IsConnected}" />
        </StackPanel>

        <!-- 进度显示 -->
        <Border Classes="card"
                IsVisible="{Binding IsBusy}">
            <StackPanel Spacing="16">
                <TextBlock Text="正在处理..."
                           Classes="subtitle" />
                <ProgressBar IsIndeterminate="True" />
                <TextBlock Text="{Binding StatusMessage}"
                           Classes="body" />
            </StackPanel>
        </Border>

        <!-- 连接状态卡片 -->
        <Border Classes="card"
                IsVisible="{Binding !IsBusy}">
            <StackPanel Spacing="16">
                <TextBlock Text="连接状态"
                           Classes="subtitle" />

                <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto,Auto" RowSpacing="12" ColumnSpacing="16">
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="状态" Classes="caption" />
                    <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" Spacing="8">
                        <Border CornerRadius="4"
                                Padding="8,4"
                                IsVisible="{Binding IsConnected}"
                                Background="#E8F5E9">
                            <TextBlock Text="已连接"
                                       FontWeight="SemiBold"
                                       Foreground="#4CAF50" />
                        </Border>
                        <Border CornerRadius="4"
                                Padding="8,4"
                                IsVisible="{Binding !IsConnected}"
                                Background="#FFF4F4">
                            <TextBlock Text="未连接"
                                       FontWeight="SemiBold"
                                       Foreground="#E81123" />
                        </Border>
                    </StackPanel>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="消息" Classes="caption" />
                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding StatusMessage}" Classes="body" TextWrapping="Wrap" />

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="版本" Classes="caption"
                               IsVisible="{Binding ServerVersion, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />
                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding ServerVersion}" Classes="body"
                               IsVisible="{Binding ServerVersion, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />

                    <TextBlock Grid.Row="3" Grid.Column="0" Text="构建时间" Classes="caption"
                               IsVisible="{Binding BuildTimestamp, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />
                    <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding BuildTimestamp}" Classes="body"
                               IsVisible="{Binding BuildTimestamp, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />
                </Grid>

                <!-- 错误显示 -->
                <Border Background="#FFF4F4"
                        BorderBrush="#E81123"
                        BorderThickness="1"
                        Padding="16"
                        CornerRadius="4"
                        IsVisible="{Binding HasError}">
                    <StackPanel Spacing="8">
                        <TextBlock Text="错误"
                                   FontWeight="SemiBold"
                                   Foreground="#E81123" />
                        <TextBlock Text="{Binding ErrorMessage}"
                                   Classes="body"
                                   TextWrapping="Wrap" />
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>

        <!-- 说明信息 -->
        <Border Background="#F3F2F1"
                Padding="16"
                CornerRadius="4">
            <StackPanel Spacing="8">
                <TextBlock Text="说明"
                           Classes="body"
                           FontWeight="SemiBold" />
                <TextBlock Classes="caption" TextWrapping="Wrap">
                    • GeoServer REST API 用于远程管理 GeoServer 服务器
                    <LineBreak />
                    • 默认用户名/密码为 admin/geoserver
                    <LineBreak />
                    • 确保 GeoServer 服务器已启动并可访问
                    <LineBreak />
                    • 连接成功后可使用其他 GeoServer 管理工具
                </TextBlock>
            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>
