<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:GisToolbox.ViewModels.RasterTools"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="GisToolbox.Views.RasterTools.RasterFormatConversionView"
             x:DataType="vm:RasterFormatConversionViewModel">

    <StackPanel Spacing="24">
        <StackPanel Spacing="8">
            <TextBlock Text="{Binding ToolName}"
                       Classes="title" />
            <TextBlock Text="{Binding ToolDescription}"
                       Classes="body"
                       TextWrapping="Wrap" />
        </StackPanel>

        <Border Classes="card">
            <StackPanel Spacing="20">
                <TextBlock Text="参数配置"
                           Classes="subtitle" />

                <StackPanel Spacing="8">
                    <TextBlock Text="输入文件"
                               Classes="body"
                               FontWeight="SemiBold" />
                    <Grid ColumnDefinitions="*,Auto,140">
                        <TextBox Grid.Column="0"
                                 Text="{Binding InputFilePath}"
                                 Watermark="选择输入栅格文件..."
                                 IsReadOnly="True" />
                        <Button Grid.Column="1"
                                Content="浏览"
                                Classes="secondary"
                                Command="{Binding SelectInputFileCommand}"
                                Margin="8,0"
                                Padding="16,8" />
                        <ComboBox Grid.Column="2"
                                  ItemsSource="{Binding AvailableFormats}"
                                  SelectedItem="{Binding InputFormat}"
                                  Margin="8,0,0,0" />
                    </Grid>
                </StackPanel>

                <StackPanel Spacing="8">
                    <TextBlock Text="输出文件"
                               Classes="body"
                               FontWeight="SemiBold" />
                    <Grid ColumnDefinitions="*,Auto,140">
                        <TextBox Grid.Column="0"
                                 Text="{Binding OutputFilePath}"
                                 Watermark="选择输出文件路径..."
                                 IsReadOnly="True" />
                        <Button Grid.Column="1"
                                Content="浏览"
                                Classes="secondary"
                                Command="{Binding SelectOutputFileCommand}"
                                Margin="8,0"
                                Padding="16,8" />
                        <ComboBox Grid.Column="2"
                                  ItemsSource="{Binding AvailableFormats}"
                                  SelectedItem="{Binding OutputFormat}"
                                  Margin="8,0,0,0" />
                    </Grid>
                </StackPanel>

                <Border Background="#F3F2F1"
                        Padding="16"
                        CornerRadius="4">
                    <StackPanel Spacing="8">
                        <TextBlock Text="支持的格式"
                                   Classes="body"
                                   FontWeight="SemiBold" />
                        <TextBlock Classes="caption" TextWrapping="Wrap">
                            • GeoTIFF (.tif, .tiff) - 地理参考栅格格式
                            <LineBreak />
                            • PNG (.png) - 无损压缩图像格式
                            <LineBreak />
                            • JPEG (.jpg, .jpeg) - 有损压缩图像格式
                            <LineBreak />
                            • BMP (.bmp) - 位图图像格式
                        </TextBlock>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>

        <StackPanel Orientation="Horizontal" Spacing="12">
            <Button Content="开始转换"
                    Command="{Binding ProcessCommand}"
                    Classes="primary"
                    IsEnabled="{Binding !IsBusy}" />

            <Button Content="重置"
                    Command="{Binding ResetCommand}"
                    Classes="secondary" />
        </StackPanel>

        <Border Classes="card"
                IsVisible="{Binding IsBusy}">
            <StackPanel Spacing="16">
                <TextBlock Text="正在转换格式..."
                           Classes="subtitle" />
                <ProgressBar Value="{Binding ProgressValue}"
                             Maximum="100" />
                <TextBlock Text="{Binding StatusMessage}"
                           Classes="body" />
            </StackPanel>
        </Border>

        <Border Classes="card"
                IsVisible="{Binding !IsBusy}">
            <StackPanel Spacing="16">
                <TextBlock Text="转换结果"
                           Classes="subtitle" />

                <StackPanel Spacing="8">
                    <TextBlock Classes="caption">状态</TextBlock>
                    <TextBlock Text="{Binding StatusMessage}"
                               Classes="body"
                               FontWeight="SemiBold" />
                </StackPanel>

                <StackPanel IsVisible="{Binding ProcessedCount, Converter={x:Static ObjectConverters.IsNotNull}}"
                            Spacing="8">
                    <TextBlock Text="处理的图像数"
                               Classes="caption" />
                    <TextBlock Text="{Binding ProcessedCount}"
                               FontSize="32"
                               FontWeight="Bold"
                               Foreground="#0078D4" />
                </StackPanel>

                <Border Background="#FFF4F4"
                        BorderBrush="#E81123"
                        BorderThickness="1"
                        Padding="16"
                        CornerRadius="4"
                        IsVisible="{Binding HasError}">
                    <StackPanel Spacing="8">
                        <TextBlock Text="错误"
                                   FontWeight="SemiBold"
                                   Foreground="#E81123" />
                        <TextBlock Text="{Binding ErrorMessage}"
                                   Classes="body"
                                   TextWrapping="Wrap" />
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>